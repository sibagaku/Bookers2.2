        <%= render"books/list", books: @books %>

        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <% if @book.user == current_user %>
                            <td>
                                <%= link_to user_path(@book.user.id) do %>
                                    <%= image_tag @book.user.get_profile_image(80,80) %><br>
                                    <%= @book.user.name %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to @book.title, book_path(@book.id) %>
                            </td>
                            <td><%= @book.body %></td>
                            <td id="favorite_btn_<%= @book.id %>">
                                <%= render "favorite", book: @book %>
                            </td>
                            <td>
                                <% if @book.user == current_user %>
                                    <%= link_to "Edit", edit_book_path, class:"btn btn-success btn-sm" %>
                                <% end %>
                            </td>
                            <td>
                                <% if @book.user == current_user %>
                                    <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-danger btn-sm", data:{confirm:"本当に消しますか？"} %>
                                <% end %>
                            </td>
                        <% else %>
                            <td>
                                <%= link_to user_path(@book.user.id) do %>
                                    <%= image_tag @book.user.get_profile_image(80,80) %><br>
                                    <%= @book.user.name %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to @book.title, book_path(@book.id) %>
                            </td>
                            <td><%= @book.body %></td>
                            <td id="favorite_btn_<%= @book.id %>">
                                <%= render "favorite", book: @book %>
                            </td>
                            <td><p>コメント数：<%= @book.book_comments.count %></p></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>

            <div>
                <% @book.book_comments.each do |book_comment| %>
                <div>
                    <%= image_tag book_comment.user.get_profile_image(100, 100) %>
                    <%= book_comment.comment %>
                    <% if book_comment.user == current_user %>
                        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class:"btn btn-danger btn-sm", method: :delete %>
                    <% end %>
                    <p><%= link_to book_comment.user.name, user_path(book_comment.user.id) %></p>
                </div>
                <% end %>
            </div>

            <div>
                <%= form_with model:[@book, @book_comment] do |f| %>
                    <%= f.text_area :comment, rows:"4", class:"form-control" %>
                    <%= f.submit "送信" %>
                <% end %>
            </div>
        </div>
    </div>
</div>

